@page
@model TestMaker.Pages.Survey.IndexModel

@{
    ViewData["Title"] = "Index";
}



<div class="table-parent">
	<div align="right">
		<a class="btn btn-lg theme-btn table-add-btn" asp-page="Create">Create New</a>
	</div>
	<table class="table">
		<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Survey[0].Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Survey[0].Description)
			</th>
			<th></th>
			<th>

			</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var item in Model.Survey)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					<a asp-page="./Edit" asp-route-id="@item.SurveyId">Edit</a> |
					<a asp-page="./Delete" asp-route-id="@item.SurveyId">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>